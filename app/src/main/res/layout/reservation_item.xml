<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reservationItemRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">
    <ImageView
        android:id="@+id/reservationItemCross"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/cross"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/reservationItemTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="시간:"
        android:textColor="@color/black"
        android:textSize="17dp" />

    <LinearLayout
        android:id="@+id/reservationItemLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reservationItemTime"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/reservationItemStart"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="5"
            android:text="선택"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="20dp" />
        <ImageView
            android:id="@+id/rightArrowButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/right_arrow" />
        <TextView
            android:id="@+id/reservationItemEnd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="선택"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/reservationItemUserID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reservationItemLinearLayout"
        android:layout_alignParentRight="true"
        android:text="예약자:"
        android:textColor="@color/black"
        android:textSize="15dp" />
</RelativeLayout>